<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicha.recyclerexample.MainActivity">
    <!--xmlns: are basically like import in java or kotlin file.
        context is basically the link between this layout and its activity.
        the line inside is basically the location of linked activity-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
